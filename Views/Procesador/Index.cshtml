@model IEnumerable<app_Comparador_de_procesadores.Models.Procesador>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Comparador de Procesadores</h1>

@if (Model == null || !Model.Any())
{
    <h3 class="text-center">No hay datos disponibles en la base de datos.</h3>
}
else
{
    <h2 class="text-center mb-4">Comparación de Procesadores Intel vs AMD</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Núcleos</th>
                    <th>Hilos</th>
                    <th>Frecuencia Base</th>
                    <th>Frecuencia Turbo</th>
                    <th>TDP</th>
                    <th>Año de Lanzamiento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>
                            @if (item.Marca == "Intel")
                            {
                                <img src="~/images/intel-logo.png" alt="Intel" class="brand-logo" />
                            }
                            else if (item.Marca == "AMD")
                            {
                                <img src="~/images/amd-logo.png" alt="AMD" class="brand-logo" />
                            }
                            <!-- Eliminamos la línea que muestra el texto de la marca -->
                        </td>
                        <td>@item.Nucleos</td>
                        <td>@item.Hilos</td>
                        <td>@item.FrecuenciaBase GHz</td>
                        <td>@item.FrecuenciaTurbo GHz</td>
                        <td>@item.Tdp W</td>
                        <td>@item.Lanzamiento</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}