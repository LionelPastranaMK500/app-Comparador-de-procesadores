@model IEnumerable<app_Comparador_de_procesadores.Models.spPuntajeProcesadores>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Resumen de Puntajes</h1>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Marca</th>
                <th>Prueba</th>
                <th>Promedio</th>
                <th>Puntaje Maximo</th>
                <th>Puntaje Minimo</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Marca == "Intel")
                            {
                                <img src="~/images/intel-logo.png" alt="Intel" class="brand-logo" />
                            }
                            else if (item.Marca == "AMD")
                            {
                                <img src="~/images/amd-logo.png" alt="AMD" class="brand-logo" />
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Prueba)</td>
                        <td>@Html.DisplayFor(modelItem => item.Promedio_Puntaje)</td>
                        <td>@Html.DisplayFor(modelItem => item.Puntaje_Maximo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Puntaje_Minimo)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center"><strong>No hay datos disponibles.</strong></td>
                </tr>
            }
        </tbody>
    </table>
</div>